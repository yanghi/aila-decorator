{
  "compilerOptions":{
    "target": "ES2016",
    "module": "ESNext",
    "baseUrl": ".",
    "outDir": "dist",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution":"node",
    "types": ["vitest/globals"],
    "allowSyntheticDefaultImports":true
  }
}